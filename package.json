{
  "name": "widget-library-workspace",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:lib": "eslint \"./projects/**/*.{ts,html}\"",
    "lint:lib:fix": "eslint \"./projects/**/*.{ts,html}\" --fix",
    "lint:app": "eslint \"./src/**/*.{ts,html}\"",
    "lint:app:fix": "eslint \"./src/**/*.{ts,html}\" --fix",
    "lint:validate": "node scripts/validate-eslint.js",
    "format": "prettier --write \"**/*.{ts,html,css,scss,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,html,css,scss,json,md}\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/config-array": "^0.23.0",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.12",
    "angular-eslint": "21.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.8"
  }
}