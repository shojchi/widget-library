{
  "name": "widget-library-workspace",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:lib": "eslint \"./projects/**/*.{ts,html}\"",
    "lint:lib:fix": "eslint \"./projects/**/*.{ts,html}\" --fix",
    "lint:app": "eslint \"./src/**/*.{ts,html}\"",
    "lint:app:fix": "eslint \"./src/**/*.{ts,html}\" --fix",
    "lint:validate": "node scripts/validate-eslint.js",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json}\" \"projects/widget-library/**/*.{ts,html,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss,json}\" \"projects/widget-library/**/*.{ts,html,css,scss,json}\"",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch"
  },
  "prettier": {
    "printWidth": 90,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      },
      {
        "files": "*.graphql",
        "options": {
          "parser": "graphql"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "dependencies": {
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/platform-browser": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@apollo/client": "^4.0.11",
    "@ngrx/effects": "^21.0.1",
    "@ngrx/store": "^21.0.1",
    "@ngrx/store-devtools": "^21.0.1",
    "apollo-angular": "^13.0.0",
    "graphql": "^16.12.0",
    "graphql-request": "^7.4.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@eslint/config-array": "^0.23.0",
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typed-document-node": "^6.1.5",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@tailwindcss/postcss": "^4.1.18",
    "angular-eslint": "21.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "ng-packagr": "^21.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.52.0",
    "vitest": "^4.0.16"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
